<body>
  <div class="text-center">
    <main class="form-signin">
      <form method="POST" action="/auth/login">
        <img class="mb-04" src="/img/logo.png" alt width="172" height="77">
        <h1 class="h3 mb-3 fw-normal"> Login</h1>
        <div class="form-floating">
            <input type="usuário" class="form-control" id="floatingInput" placeholder="usuário" required name="usuario">
            <label for="name">usuário</label>
        </div> 
        <div class="form-floating">
            <input type="password" class="form-control" id="floatingInput" placeholder="password" required name="password">
            <label for="senha">senha</label>
        </div> 
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="remember-me">
                     Lembre me 
            </label>
        </div>
        <button class="w-100 btn btn-lg btn-primary " type="submit">Entrar</button>
        <p class="mt-5 mb-3 text-muted">Grupo Ameron de Saúde</p>
      </form>
    </main>
  </div>
</body>
